<div id="shopify-section-[id]" class="shopify-section">
  <div class="section-img-two">
    <div class="image">
      <img src="{{ section.settings.image | image_url: width: 800, height: 800 }}" alt="Copa">
    </div>
    <div class="box-text">
      {% if section.settings.title != blank   %}
      <h1>{{ section.settings.title }}</h1>
      {% endif %}
      {% if section.settings.subtitle != blank %}
      <p>{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>
  </div>
</div>

<style>  
    .section-img-two .box-text .box-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      align-items: center;
      width: 100%;
    }
  
  @media screen and (max-width: 767px) {
    .image {
      display: block !important;
    }


    .section-img-two .image img {
      max-height: 367px !important;
    }

    .section-img-two {
      display: flex;
      flex-direction: column;
      height: auto !important;
      margin: 32px 0px !important;
    }

    .section-img-two .image {
      width: 100% !important;
      border-radius: 13px 13px 0 0 !important;
      max-height: 367px !important;
    }

    .section-img-two .box-text {
      padding: 65px 24px !important;
      border-radius: 0 0 13px 13px !important;
      width: 100% !important;
    }

    .section-img-two .box-text h1 {
      font-size: 24px !important;      
      line-height: 32px !important;
    }

    .section-img-two .box-text p {
      font-size: 14px !important;
      line-height: unset !important;
    }

    .section-img-two .box-text a {
      font-size: 18px !important;
    }


  }


  @media only screen and (max-width: 992px) {
    .section-img-two .box-text h1 {
      font-size: 32px;
    }

    .section-img-two .box-text p {
      font-size: 21px;
    }
  }

  @media only screen and (min-width: 993px) {
    .section-img-two .box-text h1 {
      font-size: 36px;
    }
    .section-img-two .box-text p {
      font-size: 22px;
    }
  }

  .section-img-two {
    
    height: 650px;
    margin: 50px 0px 50px 0px;
    display: flex;
  }

  .section-img-two .image {
    height: 100%;
    width: 50%;
    border-radius: 13px 0 0 13px;
    overflow: hidden;
  }

  .section-img-two .image img {    
    height: 100%;
    object-fit: cover;
    width: 100%;
  }

  .section-img-two .box-text {
    display: flex;
    gap: 30px;
    
    border-radius: 0 13px 13px 0;
    background-color: #153E35;
    justify-content: space-evenly;
    flex-direction: column;
    align-items: center;
    width: 50%;
  }

  .section-img-two .box-text {
    text-align: center;
    padding: 50px;
    font-size: 25px;
    color: white;
  }

  .section-img-two .box-text h1 {
    
    letter-spacing: 0px;
    color: white;
    font-weight: lighter;
    font-size: 35px;
    line-height: 47px;        
    margin: 0;
  }

  @media screen and (max-width: 749px) {}

  .section-img-two .box-text p {
    
    font-size: 25px;
    line-height: 34px;
    margin: 0;
    max-width: 638px;
  }

  .section-img-two .box-text img {
    width: 227px;
  }
</style> 

{% schema %}
{
"name": "Image Text right-two",
"tag": "section",
"class": "section",
"settings": [
  {
    "type": "image_picker",
    "id": "image",
    "label": "Imagen"
  },
  {
    "type": "text",
    "id": "title",
    "label": "Título"
  },
  {
    "type": "text",
    "id": "subtitle",
    "label": "Subtítulo"
  }
],  

"presets": [
{
"name": "Text two",
"category": "Custom content"

}
]
}
{% endschema %}